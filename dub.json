{
    "description": "D language utility library",
    "authors": [
        "Timur Gafarov",
        "Martin Cejp",
        "Andrey Penechko",
        "Vadim Lopatin",
        "Nick Papanastasiou",
        "Oleg Baharev",
        "Roman Chistokhodov",
        "Eugene Wissner",
        "Roman Vlasov",
        "Basile Burg",
        "Valeriy Fedotov",
        "Ferhat Kurtulmu≈ü"
    ],
    "license": "BSL-1.0",
    "homepage": "http://github.com/gecko0307/dlib",
    "name": "dlib2",
    "buildRequirements":[
        "allowWarnings"
    ],
    "lflags-linux-gdc": ["-lz"],
    "configurations": [
        {
            "name": "library",
            "targetType": "library",
            "importPaths": ["src"],
            "sourcePaths": ["src"],
            "dflags": ["-betterC"]
        },
        {
            "name": "import",
            "targetType": "sourceLibrary",
            "sourceFiles-posix": ["libdlib.a"],
            "sourceFiles-windows": ["dlib.lib"],
            "dflags": ["-betterC"]
        },
        {
            "name": "unittest",
            "importPaths": ["src"],
            "sourcePaths": ["src"]
        },
        {
            "name": "desktop",
            "targetType": "executable",
            "importPaths": ["src", "demo"],
            "sourcePaths": ["src", "demo"],
            "dflags": ["-betterC"],
            "mainSourceFile": "demo/main.d",
        },
        {
            "name": "web",
            "targetType": "executable",
            "importPaths": ["src", "demo"],
            "sourcePaths": ["src", "demo"],
            "dflags": ["-betterC", "-mtriple=wasm32-unknown-unknown-wasm", "-link-internally", "-L-allow-undefined", "-L--export-dynamic"],
            "postBuildCommands-windows": ["move dlib2.exe dlib2.wasm"],
            "postBuildCommands-posix": ["mv dlib2 dlib2.wasm"]
        }
    ]
}
